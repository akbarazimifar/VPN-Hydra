<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:minHeight="54dp"
    android:paddingLeft="26dp"
    android:paddingRight="26dp">

    <ImageView
        android:id="@+id/imageFlag"
        android:layout_width="36dp"
        android:layout_height="26dp"
        android:src="@drawable/unknown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="server flag" />

    <TextView
        android:id="@+id/textCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:singleLine="true"
        android:text="INDIA"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageFlag"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="55dp"
        android:layout_height="54dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/ic_premium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageConnect"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textCountry"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:contentDescription="server type premium" />

    <ImageView
        android:id="@+id/imageConnect"
        android:layout_width="32dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_connect_excellent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533"
        android:contentDescription="server signal" />
</androidx.constraintlayout.widget.ConstraintLayout>